<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <%= link_to 'Event Management App', root_path, class: 'navbar-brand' %>
        <% if current_user %> 
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
          
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item <%= 'active' if request.path == my_events_path %>">
                        <%= link_to 'My Events', my_events_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item <%= 'active' if request.path == events_path %>">
                        <%= link_to 'All Events', events_path, class: 'nav-link' %>
                    </li>
                </ul>
          
                <%= form_with url: search_path, method: :get, class: 'form-inline my-2 my-lg-0 row py-7 mx-auto col-10 col-md-8 col-lg-6' do |f|%>
                  <div class="col-md-9">
                    <%= f.text_field :search, autocomplete: "off", placeholder: 'Search by title or description ..', class: "form-control mr-sm-2" %>
                  </div>
                   <div class="col-md-3">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                   </div>
                <% end %>
                
                <ul class="navbar-nav mr-auto px-4">
                    <li class="nav-item <%= 'active' if request.path == my_events_path %>">
                        <%= link_to 'Create Event', new_event_path, class: 'btn btn-outline-primary my-3' %>
                    </li>
                </ul>

                <ul class='navbar-nav ml-auto row'>
                    <li class='nav-item user-name col-md-6 pt-2'>
                        <%= fa_icon 'user' %> <%= current_user.decorate.full_name %> 
                    </li>
                    <li class='nav-item col-md-6'>
                        <%= button_to("Logout", destroy_user_session_path,
                            class: "btn btn-danger logout-button", method: :delete)%>
                    </li>
